<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_image_background">
        <TextView
            android:id="@+id/txt_first_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="D"
            android:fontFamily="@font/inter"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_name"
        style="@style/white_18sp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@id/frame_layout"
        android:layout_alignBottom="@id/frame_layout"
        android:layout_toRightOf="@id/frame_layout"
        android:text="Dwi Agung Febriyanto" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:background="#33FFFFFF"
        android:layout_toEndOf="@id/frame_layout"
        android:layout_below="@id/txt_name"/>

</RelativeLayout>