<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Contacts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Contacts" parent="Base.Theme.Contacts" />

    <!--Font-->
    <style name="pale_silver_25sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/pale_silver</item>
    </style>
    <style name="pale_silver_action_20sp">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/pale_silver</item>
    </style>
    <style name="pale_silver_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/pale_silver</item>
    </style>
    <style name="pale_silver_15sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/pale_silver</item>
    </style>
    <style name="white_25sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="white_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="label_15sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <!--EditText-->
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <!--Animation-->
    <style name="animation">
        <item name="android:windowEnterAnimation">@animator/slide_up</item>
        <item name="android:windowExitAnimation">@animator/slide_down</item>
    </style>
</resources>